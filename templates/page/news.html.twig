{% extends 'base.html.twig' %}

{% block title %}Fil d'actualités{% endblock %}

{% block body %}
<h1 class="text-white">Fil d'actualités</h1>

<div class="row mt-3 d-flex gap-5 justify-content-center">
    {% for article in news['data'] %}
        <div class="card mb-3 pt-2 col-md-5 rounded-4">
            <img src={{ article.imageUrl }} class="card-img-top rounded-3" alt="{{ article.title }}">
            <div class="card-body">
                <h5 class="card-title">{{ article.title }}</h5>
                <p class="card-text">{{ article.content }}</p>
                <p class="card-text"><small class="text-body-secondary">Publié le {{ article.date }} à {{ article.time }}</small></p>
                <a href="{{ article.readMoreUrl }}" class="btn btn-primary">Lire la suite</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}